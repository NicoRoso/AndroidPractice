<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Catalog"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnGetAllGames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Получить все игры"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSearchGames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Поиск игр (RPG)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGetCollections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мои коллекции"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGetWishlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список желаний"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выход"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Результат будет здесь..."
        android:textSize="16sp"
        android:background="#f0f0f0"
        android:padding="16dp"
        android:minHeight="120dp" />

</LinearLayout>